<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xmnls="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="challenge.juanaso.com.iguanafixkotlin.viewmodel.DetailViewModel" />
    </data>
<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:elevation="20dp"
        xmnls:cardCornerRadius="10dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/user_detail_card_number_image"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_phone"/>
        <TextView
                android:layout_centerVertical="true"
                android:paddingTop="10dp"
                android:id="@+id/user_detail_card_number_textView"
                android:layout_toEndOf="@+id/user_detail_card_number_image"
                android:layout_width="wrap_content"
                android:textColor="#ab050505"
                app:userPhones="@{viewModel.getCurrentUser()}"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
</layout>